my $is-isbn = /^(978|979)'-'\d**1..5'-'\d**1..7'-'\d**1..6'-'\d$/;
subset ISBN13 where $_.chars ~~ 17 && $_ ~~ $is-isbn;

sub checksum (ISBN13 $isbn) {
    my $sum;
    for zip($isbn.subst(/(\-|.$)/,'',:g).comb, (1,3).cycle) -> $digit, $mult {
        $sum += $digit * $mult;
    }
    10-($sum mod 10) ~~ $isbn.substr(/.$/)
}

